	vec4 col = texture(TEXTURE, UV);
	float noise = texture(NOISE_PATTERN, rotate_by(UV+TIME*speed, TIME/0.1, vec2(0.5))).r * noise_intensity;
	COLOR = vec4(col.rgb+(noise*noise_intensity), col.a);
}"

