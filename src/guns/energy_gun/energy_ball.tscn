vec2 rotate_by(vec2 pos, float angle, vec2 point) {
	return vec2(
		((pos.x - point.x) * cos(angle)) - ((pos.y - point.y) * sin(angle)) + point.x,
		((pos.x - point.x) * sin(angle)) + ((pos.y - point.y) * cos(angle)) + point.y
	);
}

